<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.antigravity.geofencing.MvvmViewModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MVVM LiveData Flavor (2017)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:text="@={viewModel.latitude}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/latitude"
            android:inputType="numberDecimal|numberSigned"/>

        <EditText
            android:text="@={viewModel.longitude}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/longitude"
            android:inputType="numberDecimal|numberSigned"/>

        <EditText
            android:text="@={viewModel.radius}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/radius"
            android:inputType="numberDecimal"/>

        <Button
            android:onClick="@{() -> viewModel.onSetGeofenceClicked()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_geofence"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="@{viewModel.status}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{viewModel.isAlarmVisible ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_playing"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <Button
                android:onClick="@{() -> viewModel.onSilenceClicked()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/silence"/>

            <Button
                android:onClick="@{() -> viewModel.onSnoozeClicked()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/snooze"/>
        </LinearLayout>
    </LinearLayout>
</layout>
