<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.antigravity.geofencing.MvvmViewModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MVVM LiveData Flavor (2017)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:text="@{viewModel.currentLocation}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0000FF"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap Map to Select Location"
            android:layout_marginBottom="8dp"/>

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_latitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Latitude"
                android:inputType="numberDecimal|numberSigned"
                android:text="@={viewModel.latitude}" />

            <EditText
                android:id="@+id/et_longitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Longitude"
                android:inputType="numberDecimal|numberSigned"
                android:text="@={viewModel.longitude}" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/radius"
            android:inputType="numberDecimal"
            android:text="@={viewModel.radius}" />

        <Button
            android:id="@+id/btn_set_geofence"
            android:onClick="@{() -> viewModel.onSetGeofenceClicked()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_geofence"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_status"
            android:text="@{viewModel.status}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{viewModel.isAlarmVisible ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_playing"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <Button
                android:onClick="@{() -> viewModel.onSilenceClicked()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/silence"/>

            <Button
                android:onClick="@{() -> viewModel.onSnoozeClicked()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/snooze"/>
                android:text="@string/snooze"/>
        </LinearLayout>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View History"
            android:onClick="@{() -> viewModel.onHistoryClicked()}"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</layout>
